{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist/server",
    "rootDir": "./server",
    "noEmit": false,
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
