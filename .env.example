# ============================================
# FLIX - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# BACKEND API (Arweave Storage)
# ============================================
# Your existing Express backend that handles Arweave uploads
VITE_BACKEND_URL=http://localhost:5000/api

# ============================================
# SOLANA CONFIGURATION (Optional)
# ============================================
# Custom Solana RPC endpoint (optional - defaults to Devnet)
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com

# ============================================
# PAYMENT CONFIGURATION (Optional)
# ============================================
# Stripe (for future integration)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key

# ============================================
# APP CONFIGURATION (Optional)
# ============================================
VITE_APP_NAME=Flix
VITE_APP_URL=http://localhost:3000
